kind: Command
version: v1
definition:
  name: hello
  description: Basic test of native queries
  outputType: String
  arguments:
    - name: name
      type: String!
  source:
    dataConnectorName: sample_mflix
    dataConnectorCommand:
      function: hello
    argumentMapping:
      name: name
  graphql:
    rootFieldName: hello
    rootFieldKind: Query

---
kind: CommandPermissions
version: v1
definition:
  commandName: hello
  permissions:
    - role: admin
      allowExecution: true
